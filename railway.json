{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile",
    "watchPatterns": [
      "package.json",
      "pnpm-lock.yaml",
      "Dockerfile",
      ".dockerignore",
      "next.config.*",
      "tsconfig.json",
      "tailwind.config.*",
      "postcss.config.*",
      "drizzle.config.ts",
      "src/db/schema.ts",
      "railway.json"
    ]
  },
  "deploy": {
    "startCommand": "tsx scripts/start-with-migrations.ts",
    "healthcheckPath": "/api/health",
    "healthcheckTimeout": 5000,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
